@model IEnumerable<Gamers>

@{
    ViewData["Title"] = "Index";
}

@if(Model.Count() > 0) 
{
    <table>
        <thead>
            <tr>
                <th>
                    Teams name
                </th>
                <th>
                    Display order
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var i in Model)
            {
                <tr>
                    <td>@i.Name</td>
                    <td>@i.IdTeam</td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p> No Gamers exists. </p>
}


